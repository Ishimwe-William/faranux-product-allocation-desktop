{
  "name": "faranux-product-allocation",
  "productName": "Inventory Manager",
  "appId": "com.bunsenplus.fxproductallocation",
  "version": "1.0.3",
  "description": "Desktop application for product allocation management",
  "icon": "./assets/icon.png",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron . --debug",
    "dist": "electron-builder --win",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "clean": "rimraf dist",
    "publish": "electron-builder --win --publish always"
  },
  "keywords": [
    "inventory",
    "management",
    "electron"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ishimwe-William/faranux-product-allocation-desktop.git"
  },
  "build": {
    "appId": "com.bunsenplus.fxproductallocation",
    "compression": "normal",
    "publish": [
      {
        "provider": "github",
        "owner": "Ishimwe-William",
        "repo": "faranux-product-allocation-desktop",
        "private": false,
        "releaseType": "release"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "buildResources/logo.ico",
      "publisherName": "Bunsenplus",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "buildResources/logo.ico",
      "uninstallerIcon": "buildResources/logo.ico",
      "installerHeaderIcon": "buildResources/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Inventory Manager",
      "installerSidebar": "buildResources/installerSidebar.bmp",
      "differentialPackage": true,
      "deleteAppDataOnUninstall": false
    },
    "directories": {
      "output": "dist",
      "buildResources": "buildResources"
    },
    "mac": {
      "icon": "buildResources/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "icon": "buildResources/logo.png",
      "category": "Office"
    }
  },
  "author": "Bunsenplus",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.6.1",
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^36.0.1",
    "electron-builder": "^26.0.12"
  }
}
