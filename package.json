{
  "name": "faranux-product-allocation",
  "productName": "Inventory Manager",
  "appId": "com.bunsenplus.fxproductallocation",
  "version": "1.0.2",
  "description": "Desktop application for product allocation management",
  "icon": "./assets/icon.png",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron . --debug",
    "dist": "electron-builder --win",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "clean": "rimraf dist"
  },
  "keywords": [
    "inventory",
    "management",
    "electron"
  ],
  "build": {
    "appId": "com.bunsenplus.fxproductallocation",
    "compression": "normal",
    "win": {
      "target": "nsis",
      "icon": "buildResources/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "buildResources/logo.ico",
      "uninstallerIcon": "buildResources/logo.ico",
      "installerHeaderIcon": "buildResources/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Inventory Manager",
      "installerSidebar": "buildResources/installerSidebar.bmp",
      "differentialPackage": false
    },
    "directories": {
      "output": "dist",
      "buildResources": "buildResources"
    },
    "mac": {
      "icon": "buildResources/icon.icns"
    },
    "linux": {
      "icon": "buildResources/logo.png"
    }
  },
  "author": "Bunsenplus",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.6.1",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^36.0.1",
    "electron-builder": "^26.0.12"
  }
}